{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@styles/*": [
        "./styles/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@events/*": [
        "./src/events/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}